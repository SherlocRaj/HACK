# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Descope Authentication
DESCOPE_PROJECT_ID=your-project-id
DESCOPE_MANAGEMENT_KEY=your-management-key
DESCOPE_BASE_URL=https://api.descope.com

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_ISSUER=secure-mcp-server
JWT_AUDIENCE=mcp-client
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-minimum-32-characters
SESSION_MAX_AGE=3600000

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_REDIRECT_URI=http://localhost:3000/auth/slack/callback

NOTION_CLIENT_ID=your-notion-client-id
NOTION_CLIENT_SECRET=your-notion-client-secret
NOTION_REDIRECT_URI=http://localhost:3000/auth/notion/callback

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cequence Gateway
CEQUENCE_GATEWAY_URL=https://your-gateway.cequence.com
CEQUENCE_API_KEY=your-cequence-api-key

# Monitoring & Alerting
ELASTICSEARCH_URL=https://your-elasticsearch-instance
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook
ALERT_EMAIL=alerts@your-domain.com

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
